<h2>{{ pergunta.label.value }}</h2>&#10&#10<form action="/votacao/{{ pergunta.id.value }}/votar" method="POST">&#10&#10  {% for opcao in opcoes %}&#10    <div>&#10      <input type="radio" name="opcao" value="{{ opcao.id.value }}"&#10             id="opcao-{{ opcao.id.value }}" required>&#10&#10      <label for="opcao-{{ opcao.id.value }}">&#10        <strong>{{ opcao.label.value }}</strong><br>&#10        {% if opcao.imagem.entity %}&#10          <img src="{{ file_url(opcao.imagem.entity.fileuri) }}"&#10               alt="{{ opcao.titulo.value }}">&#10        {% endif %}&#10        {% if opcao.description.value %}&#10          <p>{{ opcao.description.value | raw }}</p>&#10        {% endif %}&#10      </label>&#10    </div>&#10  {% endfor %}&#10  <button type="submit">Votar</button>&#10</form>&#10&#10{% if show_results %}&#10  <h3>Resultados da Votação</h3>&#10  {% set total = 0 %}&#10  {% for opcao in opcoes %}&#10    {% set total = total + opcao.votos.value %}&#10  {% endfor %}&#10&#10  {% if total > 0 %}&#10    <ul>&#10      {% for opcao in opcoes %}&#10        <li>&#10          {{ opcao.label.value }} — {{ opcao.votos.value }} votos&#10          ({{ (opcao.votos.value / total * 100)|number_format(1, '.', '') }}%)&#10        </li>&#10      {% endfor %}&#10    </ul>&#10  {% else %}&#10    <p>Nenhum voto ainda.</p>&#10  {% endif %}&#10{% endif %}&#10